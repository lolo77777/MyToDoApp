	<materialDesign:NavigationDrawer Name="naviDrawer" LeftDrawerOpened="{Binding ElementName=NavDrawerSwitch, Path=IsChecked, Mode=TwoWay}">
		<materialDesign:NavigationDrawer.LeftDrawerContent>
			<DockPanel LastChildFill="True">
				<StackPanel Margin="0,20" DockPanel.Dock="Top">
					<Image
						Width="50"
						Height="50"
						Source="/Assets/TA3.jpg">
						<Image.Clip>
							<EllipseGeometry
								Center="25,25"
								RadiusX="25"
								RadiusY="25" />
						</Image.Clip>
					</Image>
					<TextBlock
						Margin="0,10"
						HorizontalAlignment="Center"
						Text="洛洛" />
				</StackPanel>
				<ListBox
					Name="menuItems"
					SelectionMode="Single"

					DockPanel.Dock="Bottom">
					<ListBox.Styles>

						<Style Selector="ListBoxItem:not(.notransitions) /template/ Border#selectedBorder,
                   ListBoxItem:not(.notransitions) /template/ Border#pointerOverBorder">
							<Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}" />
						</Style>
					</ListBox.Styles>
					<ListBox.ItemTemplate>
						<DataTemplate>
							<StackPanel
								VerticalAlignment="Center"
								Background="Transparent"
								Orientation="Horizontal">
								<Icon:MaterialIcon
									Margin="10,0"
									VerticalAlignment="Center"
									Kind="{Binding Icon}" />
								<TextBlock
									Margin="10,0"
									FontSize="20"
									Foreground="White"
									Text="{Binding Title}" />
							</StackPanel>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
			</DockPanel>
		</materialDesign:NavigationDrawer.LeftDrawerContent>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<materialDesign:ColorZone
				Background="{DynamicResource PrimaryHueMidBrush}"
				Padding="7"
				DoubleTapped="OnButtonMaxClick"
				Mode="PrimaryMid">
				<DockPanel  LastChildFill="True">
					<StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
						<Button
							Name="btnMin"
							FontSize="32"
							Content="—"
							Classes="Flat"

							Click="OnButtonMinClick" />
						<Button
							Name="btnMax"
							FontSize="32"
							Content="☐"
							Classes="Flat"
							Click="OnButtonMaxClick" />
						<Button
							Name="btnClose"
							FontSize="32"
							Content="✕"
							Classes="Flat"
							Click="OnButtonCloseClick" />
					</StackPanel>
					<Menu DockPanel.Dock="Right">
						<MenuItem>
							<MenuItem.Header>
								<Image
								Width="25"
								Height="25"
								Source="/Assets/TA3.jpg">
									<Image.Clip>
										<EllipseGeometry
											Center="12.5,12.5"
											RadiusX="12.5"
											RadiusY="12.5" />
									</Image.Clip>
								</Image>
							</MenuItem.Header>

							<MenuItem Header="注销账号" />
						</MenuItem>
					</Menu>
					<StackPanel Orientation="Horizontal">
						<ToggleButton
							Padding="10"
							Name="NavDrawerSwitch"
							Content="{Icon:MaterialIconExt Kind=HamburgerMenu,Size=37}"
							IsChecked="False"
							Classes="Flat TransparentBack" />
						<Button
							Name="btnNaviBack"
							Padding="10"
							Classes="Flat"
							Margin="8,0,0,0"
							Content="{Icon:MaterialIconExt Kind=ArrowLeft,Size=26}"
							Tag="Previous Item" />
						<Button
							Padding="10"
							Classes="Flat"
							Margin="8,0,0,0"
							Content="{Icon:MaterialIconExt Kind=ArrowRight,Size=26}"
							Tag="Next Item" />
						<TextBlock
							Margin="8,0"
							HorizontalAlignment="Center"
							VerticalAlignment="Center"
							FontWeight="Medium"
							FontSize="22"
							Text="笔记本" />
					</StackPanel>
				</DockPanel>
			</materialDesign:ColorZone>
			<rxui:RoutedViewHost
                    Name="mainContent"
                    Grid.Row="1"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch" />
		</Grid>
	</materialDesign:NavigationDrawer>
</Window>